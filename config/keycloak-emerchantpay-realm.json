{
  "realm": "emerchantpay",
  "displayName": "EMerchantPay",
  "enabled": true,
  "requiredCredentials": [
    "password"
  ],
  "users": [
    {
      "username": "emp_admin",
      "enabled": true,
      "emailVerified": true,
      "firstName": "Admin",
      "lastName": "User",
      "credentials": [
        {
          "type": "password",
          "value": "emp_admin_password",
          "temporary": false
        }
      ],
      "realmRoles": [
        "admin"
      ]
    }
  ],
  "roles": {
    "realm": [
      {
        "name": "merchant",
        "description": "Merchant Role"
      },
      {
        "name": "admin",
        "description": "Admin Role"
      }
    ]
  },
  "clients": [
    {
      "clientId": "emerchantpay-test-client",
      "enabled": true,
      "protocol": "openid-connect",
      "attributes": {
        "access.token.lifespan": "43200"
      },
      "bearerOnly": true,
      "serviceAccountsEnabled": true,
      "secret": "emerchantpay_test_client_secret",
      "authorizationServicesEnabled": false,
      "directAccessGrantsEnabled": false,
      "fullScopeAllowed": true,
      "protocolMappers": [
        {
          "name": "Authorities Mapper",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "consentRequired": false,
          "config": {
            "multivalued": "true",
            "userinfo.token.claim": "false",
            "id.token.claim": "false",
            "access.token.claim": "true",
            "claim.name": "authorities",
            "jsonType.label": "String"
          }
        }
      ]
    },
    {
      "clientId": "emerchantpay-web-client",
      "enabled": true,
      "protocol": "openid-connect",
      "baseUrl": "http://localhost:8080",
      "bearerOnly": false,
      "publicClient": true,
      "redirectUris": [
        "http://localhost:8080/*",
        "http://127.0.0.1:8080/*"
      ],
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": false,
      "fullScopeAllowed": true,
      "protocolMappers": [
        {
          "name": "Authorities Mapper",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "consentRequired": false,
          "config": {
            "multivalued": "true",
            "userinfo.token.claim": "false",
            "id.token.claim": "false",
            "access.token.claim": "true",
            "claim.name": "authorities",
            "jsonType.label": "String"
          }
        }
      ]
    }
  ]
}
